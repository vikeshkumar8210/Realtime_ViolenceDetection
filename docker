name: Python application

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v1
    - name: Build & Push Image
      run: 
        echo "${{ secrets.DOCKER }}" | docker login -u "vikesh82" --password-stdin
        docker image build -t vikeshkumar8210/Realtime_ViolenceDetection
        docker push vikeshkumar8210/Realtime_ViolenceDetection
